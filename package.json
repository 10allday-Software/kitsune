{
  "name": "Kitsune",
  "description": "Platform for Mozilla Support",
  "repository": {
    "type": "git",
    "url": "git://github.com/mozilla/kitsune.git"
  },
  "scripts": {
    "stylelint": "stylelint kitsune/sumo/static/sumo/scss/**/* --fix",
    "build:scss": "sass kitsune/sumo/static/sumo/scss/screen.scss static/build/screen-noprefixes.css --source-map --load-path 'node_modules/@mozilla-protocol/core/protocol/css'",
    "build:postcss": "npx postcss static/build/screen-noprefixes.css --use autoprefixer -o static/build/screen.css",
    "watch:stylelint": "onchange 'kitsune/sumo/static/sumo/scss/**/*' -- npm run stylelint",
    "watch:styles": "onchange 'kitsune/sumo/static/sumo/scss/**/*' -- npm run build:css",
    "install-dev": "npm install",
    "postinstall": "node prepare_django_assets.js",
    "development": "npm run install-dev",
    "production": "npm run postinstall"
  },
  "license": "MPL-2.0",
  "dependencies": {
    "classnames": "~1.2.2",
    "codemirror": "5.3.0",
    "d3": "^3.1.5",
    "es6-promise": "2.3.0",
    "fetch": "1.0.0",
    "flux": "~2.0.2",
    "fontawesome": "^4.3.0",
    "jquery": "1.11.3",
    "jquery-ui": "~1.10.2",
    "mailcheck": "1.1.0",
    "modernizr": "3.3.1",
    "moment": "2.8.3",
    "normalize.css": "~3.0.2",
    "nunjucks": "^1.3.4",
    "pikaday": "~1.3.2",
    "react": "0.13.3",
    "react-select": "0.6.7",
    "underscore": "1.8.2"
  },
  "devDependencies": {
    "@mozilla-protocol/core": "10.0.1",
    "autoprefixer": "^9.7.1",
    "babel": "5.8.23",
    "babelify": "5.0.4",
    "browserify": "9.0.3",
    "chai": "3.2.0",
    "chai-lint": "0.1.1",
    "cssmin": "0.4.3",
    "eslint": "1.10.3",
    "gulp": "3.8.6",
    "gulp-nunjucks": "0.2.2",
    "gulp-watch": "0.6.8",
    "jsdom": "7.0.2",
    "less": "~3.10.3",
    "less-plugin-autoprefix": "1.4.2",
    "mocha": "2.3.2",
    "mocha-jsdom": "1.1.0",
    "nunjucks": "^1.3.4",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "react": "0.13.3",
    "sass": "^1.23.2",
    "sinon": "1.16.1",
    "sinon-chai": "2.8.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended-scss": "^3.3.0",
    "stylelint-order": "^1.0.0",
    "stylelint-scss": "^3.12.0",
    "uglify-js": "2.6.0",
    "cpx": "~1.5.0"
  }
}
